{
  "name": "device-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write ./src/**/*.{js,html} --no-error-on-unmatched-pattern",
    "lint": "prettier --check --write ./src/**/*.{js,html} --no-error-on-unmatched-pattern && eslint src/**/*.{js} --no-error-on-unmatched-pattern",
    "lint:fix": "prettier --write ./src/**/*.{js,html} --no-error-on-unmatched-pattern && eslint --fix src/**/*.{js} --no-error-on-unmatched-pattern"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@sargassum-world/styles": "^0.3.0",
    "bulma": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "purify-css": "^1.2.5",
    "rollup": "^4.13.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.72.0"
  },
  "dependencies": {
    "@fontsource/atkinson-hyperlegible": "^5.0.19",
    "@fontsource/oxygen-mono": "^5.0.18"
  }
}
